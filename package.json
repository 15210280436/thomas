{
  "name": "tom",
  "productName": "Tom",
  "version": "0.1.0",
  "description": "Simple pomodoro timer",
  "electronVersion": "0.36.0",
  "main": "app.js",
  "files": [
    "*.js",
    "assets"
  ],
  "scripts": {
    "test": "standard",
    "start": "electron .",
    "dist": "npm run dist:macos && npm run dist:linux && npm run dist:windows",
    "dist:macos": "electron-packager . --overwrite --asar --out=dist --ignore='^/(dist|media)$' --platform=darwin --arch=x64 --icon=assets/icon.icns --app-bundle-id=com.andrepolischuk.tom && cd dist/Tom-darwin-x64 && zip -ryXq9 ../Tom-macos-${npm_package_version}.zip Tom.app",
    "dist:linux": "electron-packager . --overwrite --out=dist --ignore='^/(dist|media)$' --platform=linux --arch=x64 --icon=assets/icon.png --app-bundle-id=com.andrepolischuk.tom && cd dist/Tom-linux-x64 && zip -ryq9 ../Tom-linux-${npm_package_version}.zip *",
    "dist:windows": "electron-packager . --overwrite --asar --out=dist --ignore='^/(dist|media)$' --platform=win32 --arch=ia32 --icon=assets/icon.ico --version-string.ProductName=$npm_package_productName && cd dist/Tom-win32-ia32 && zip -ryq9 ../Tom-windows-${npm_package_version}.zip *"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrepolischuk/tom.git"
  },
  "keywords": [
    "electron-app",
    "electron",
    "pomodoro",
    "timer"
  ],
  "author": "Andrey Polischuk <me@andrepolischuk.com> (https://andrepolischuk.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrepolischuk/tom/issues"
  },
  "homepage": "https://github.com/andrepolischuk/tom",
  "dependencies": {
    "bel": "^5.0.0",
    "dact": "^0.3.2",
    "dact-electron": "^0.1.0",
    "electron-config": "^1.0.0",
    "electron-debug": "^1.0.1",
    "menubar": "^5.2.3",
    "nanomorph": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^1.6.6",
    "electron-packager": "^8.7.0",
    "standard": "^10.0.2"
  }
}
